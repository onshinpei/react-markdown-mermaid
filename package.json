{
  "name": "react-markdown-mermaid",
  "version": "0.0.2",
  "description": "A React component for rendering Mermaid diagrams",
  "main": "./dist/cjs/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "dev": "vite",
    "preview": "vite preview",
    "build:demo": "vite build",
    "release": "npm run build && node scripts/set-tag.cjs && cross-env RELEASE_MODE=true npm publish",
    "prepublishOnly": "node scripts/prepublish.js",
    "lint": "eslint ."
  },
  "keywords": [
    "react-markdown-mermaid",
    "react-mermaid"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "mermaid": "^10.6.1",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@rollup/plugin-commonjs": "^27.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.36.0",
    "vite": "^5.0.0"
  },
  "publishConfig": {
    "tag": "latest"
  }
}